@model UserModel
@{
    ViewData["Title"] = "Register";
}

<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>Create Account</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create Account</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                    <form class="theme-form"
                          method="post" asp-controller="User" asp-action="Register">

                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-row">

                            <div class="col-md-6">
                                <label for="email">First Name</label>
                                <input type="text" class="form-control" id="fname" placeholder="First Name"
                                       required="" asp-for="FirstName">
                                <span asp-validation-for="FirstName" class=" text-danger"></span>
                            </div>


                            <div class="col-md-6">
                                <label for="review">Last Name</label>
                                <input type="text" class="form-control" id="lname" placeholder="Last Name"
                                       required="" asp-for="LastName">
                                <span asp-validation-for="LastName" class=" text-danger"></span>
                            </div>

                        </div>
                        <div class="form-row">

                            <div class="col-md-6">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Email" required=""
                                       asp-for="Email">
                                <span asp-validation-for="Email" class=" text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label for="review">Password</label>
                                <input type="password" class="form-control" id="review"
                                       placeholder="Please Enter your password" required=""
                                       asp-for="Password">
                                <span asp-validation-for="Password" class=" text-danger"></span>
                            </div>
                          
                            <button class="btn btn-solid" type="submit">@ResPage.lblCreateAccount</button>
                            <br />
                            <br />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->