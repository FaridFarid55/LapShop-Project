    <!-- Custom Countdown Script -->
    <script type="text/javascript">
        // تعيين تواريخ البدء والنهاية من الكود
        const startDateTime = new Date('2024-09-07T12:00:00'); // تاريخ ووقت البدء
        const endDateTime = new Date('2024-10-10T18:00:00'); // تاريخ ووقت النهاية

        // تحديث العرض بالنصوص
        document.getElementById('displayStartDate').textContent = startDateTime.toLocaleString();
        document.getElementById('displayEndDate').textContent = endDateTime.toLocaleString();

        // تعيين الوظائف التكرارية للعد التنازلي
        setInterval(function () {
            updateCountdown(startDateTime, endDateTime);
        }, 1000);

        function updateCountdown(startDateTime, endDateTime) {
            const now = new Date();

            // حساب الفارق في الوقت
            const timeToStart = startDateTime - now;
            const timeToEnd = endDateTime - now;

            // تحديث العد التنازلي للبدء
            if (timeToStart >= 0) {
                document.getElementById('countdown-start').innerHTML = formatTime(timeToStart);
            } else {
                document.getElementById('countdown-start').innerHTML = "Started!";
            }

            // تحديث العد التنازلي للنهاية
            if (timeToEnd >= 0) {
                document.getElementById('countdown-end').innerHTML = formatTime(timeToEnd);
            } else {
                document.getElementById('countdown-end').innerHTML = "Ended!";
            }
        }

        function formatTime(ms) {
            const totalSeconds = Math.floor(ms / 1000);
            const days = Math.floor(totalSeconds / (60 * 60 * 24));
            const hours = Math.floor((totalSeconds % (60 * 60 * 24)) / (60 * 60));
            const minutes = Math.floor((totalSeconds % (60 * 60)) / 60);
            const seconds = totalSeconds % 60;

            return "<span>" + days + " <span class='padding-l'>:</span> <span class='timer-cal'>Days</span> </span>" +
                "<span>" + hours + " <span class='padding-l'>:</span> <span class='timer-cal'>Hrs</span> </span>" +
                "<span>" + minutes + " <span class='padding-l'>:</span> <span class='timer-cal'>Min</span> </span>" +
                "<span>" + seconds + " <span class='timer-cal'>Sec</span></span>";
        }
    </script>
}

